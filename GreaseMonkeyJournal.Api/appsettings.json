{
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft.AspNetCore": "Warning",
                "Microsoft.EntityFrameworkCore": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentName", "WithExceptionDetails" ],
        "Properties": {
            "Application": "GreaseMonkeyJournal"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "MariaDbConnection": "server=localhost;port=3306;database=greasemonkey_journal;user=appuser;password=placeholder;Connect Timeout=30;Command Timeout=60;Default Command Timeout=60;"
    },
    "AppSettings": {
        "ApplicationTitle": "Grease Monkey Journal"
    }
}
